section.section-50.section-lg-120
	.container
		.row.row-80
			.col-lg-6.col-md-10.col-xl-5
				h5.txt-gray-darker Login Form
				.divider-lg-2.offset-top-10
				include ../../elements/_element_login_form

			.col-lg-8
				h5.txt-gray-darker Contact Form
				.divider-lg-2.offset-top-10
				// RD Mailform
				form.rd-mailform.offset-top-20(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
					.row.row-20
						.col-md-6
							.form-wrap.form-wrap-outside
								label.form-label-outside(for="contact-name1") First Name
								input#contact-name1.form-input(type="text" name="name" data-constraints="@Required")
						.col-md-6
							.form-wrap.form-wrap-outside
								label.form-label-outside(for="last-name") Last Name
								input#last-name.form-input(type="text" name="name" data-constraints="@Required")
						.col-md-6
							.form-wrap.form-wrap-outside
								label.form-label-outside(for="contact-email") E-Mail
								input#contact-email.form-input(type="email" name="email" data-constraints="@Required @Email")
						.col-md-6
							.form-wrap.form-wrap-outside
								label.form-label-outside(for="contact-phone") Phone
								input#contact-phone.form-input(type="text" name="phone" data-constraints="@Required @Numeric")
						.col-sm-12
							.form-wrap.form-wrap-outside
								label.form-label-outside(for="contact-message") Message
								textarea#contact-message.form-input(name="message" data-constraints="@Required")
							button(type="submit").btn.btn-primary.btn-sm-2.btn-shadow.btn-rect.btn-icon.btn-icon-left.offset-top-18
								span.icon.icon-white.icon-md.mdi-message-text-outline
								span send message

			.col-md-8.col-xl-6
				h5.txt-gray-darker Newsletter
				.divider-lg-2.offset-top-10
				p.offset-top-22 Keep up with our always upcoming product features and technologies. Enter your e-mail and subscribe to our newsletter.
				form.rd-mailform.offset-top-15.subscribe-form.text-center(data-form-output="form-output-global", data-form-type='subscribe', method='post', action='bat/rd-mailform.php')
					.form-wrap.form-wrap-outside
						label.form-label-outside(for="contact-email2") E-mail
						input#contact-email2.form-input(type="email" name="email" data-constraints="@Required @Email")
					button(type="submit").btn.btn-sm.btn-primary.btn-icon.btn-icon-left.btn-shadow.btn-rect.offset-top-15.offset-xl-top-0
						span.icon.icon-md.mdi-email-outline
						span  subscribe

		.row.offset-top-80
			.col-md-6.col-lg-5.col-xl-4
				h5.txt-gray-darker Reduced Newsletter Form
				.divider-lg-2.offset-top-10
				p.offset-top-22 Keep up with our always upcoming product features and technologies. Enter your e-mail and subscribe to our newsletter.
				form.rd-mailform.small.text-center.offset-top-15(data-form-output="form-output-global", data-form-type='subscribe', method='post', action='bat/rd-mailform.php')
					.form-wrap
						label.form-label(for="contact-email3") Enter your e-mail
						input#contact-email3.form-input(type="email" name="email" data-constraints="@Required @Email")
					button(type="submit").btn.btn-xs.btn-primary.btn-icon.btn-icon-left.btn-shadow.btn-rect.offset-top-15.offset-xl-top-0
						span.icon.icon-md.mdi-email-outline
						span  subscribe